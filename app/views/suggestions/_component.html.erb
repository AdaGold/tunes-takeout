<div class="suggestion">
  <div class="restaurant">
    <%= image_tag s.restaurant.image_url, alt: s.restaurant.name, class: "photo" %>
    <h3><%= link_to s.restaurant.name, s.restaurant.url %></h3>
  </div>
  <div class="spotify-item">
    <%= image_tag s.spotify_item.image_url, alt: s.spotify_item.name, class: "photo" %>
    <h3><%= link_to s.spotify_item.name, s.spotify_item.url %></h3>
  </div>
  <% if !s.persisted? -%>
    <%= form_tag suggestions_path, method: :post do %>
      <%= hidden_field_tag 'business_id', s.restaurant.business_id %>
      <%= hidden_field_tag 'item_id', s.spotify_item.item_id %>
      <%= submit_tag "Save", class: "btn-save" %>
    <% end -%>
  <% end -%>
</div>
