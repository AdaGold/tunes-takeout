<h1>Welcome, <%= display_name %>!</h1>

<% if !signed_in? -%>
  <%= link_to "Sign In", sign_in_users_path %>
<% else -%>
  <%= link_to "Sign Out", sign_out_users_path %>
<% end -%>

<div class="search-bar">
  <%= form_tag root_path, method: :get do %>
    <%= text_field_tag "q", nil, placeholder: "Enter a search term" %>
    <%= submit_tag "Search" %>
  <% end -%>
</div>

<div class="suggestions">
  <% @suggestions.each do |s| -%>
    <%= render partial: "component", locals: { s: s } %>
  <% end -%>
</div>
